<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Upload file{% endblock %}</title>
    {% block stylesheets %}
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
    {% endblock %}

    {% block javascripts %}
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa" crossorigin="anonymous"></script>
    {% endblock %}
</head>
<body>
{% block body %}
    {% block content %}
        <div class="container container-fluid">
            <h1>Hi Schirra IT Team!</h1>
            <div class="row">
                <div class="col-lg-8">
                    {{ form_start(form, { attr: { 'accept-charset' : 'utf-8' }}) }}
                    <div class="form-group">
                        {{ form_label(form.upload_file) }}
                        {{ form_widget(form.upload_file) }}
                        <div class="form-error">
                            {{ form_errors(form.upload_file) }}
                            {{ form_errors(form) }}
                        </div>
                    </div>
                    <div class="form-group">
                        {{ form_widget(form.send, {'label': "Upload this file", 'attr' : { 'class': 'btn btn-primary' }}) }}
                    </div>
                    {{ form_rest(form) }}
                    {{ form_end(form) }}

                    {% for message in app.flashes('success') %}
                        <div class="alert alert-success">
                            {{ message }}
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    {% endblock %}
{% endblock %}
</body>
</html>

